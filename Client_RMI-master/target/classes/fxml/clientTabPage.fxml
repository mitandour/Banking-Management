<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esp.banque.ui.ClientTabController">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label alignment="TOP_LEFT" text="CLIENT">
                            <font>
                                <Font name="Opal" size="24.0" />
                            </font></Label>
                        <Button onAction="#nouveauClientAction" alignment="TOP_RIGHT" mnemonicParsing="false" style="-fx-background-color: #fba225#fba225; -fx-pref-height: 50px;" text="NOUVEAU CLIENT" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
                            <font>
                                <Font name="Al Nile" size="13.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor></Button>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </GridPane>
                <TableView onMouseClicked="#tableClickAction" fx:id="tableView" prefHeight="200.0" prefWidth="200.0" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="numeroColumn" editable="false" prefWidth="75.0" text="Numéro" />
                        <TableColumn fx:id="nomColumn" editable="false" prefWidth="75.0" text="Nom" />
                        <TableColumn fx:id="prenomColumn" editable="false" prefWidth="75.0" text="Prénom" />
                        <TableColumn fx:id="agenceColumn" editable="false" prefWidth="75.0" text="Agence" />
                    </columns>
                    <cursor>
                        <Cursor fx:constant="DEFAULT" />
                    </cursor>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
